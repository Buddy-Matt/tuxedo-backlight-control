#!/bin/bash

# error logging
set -e

install_dir=/usr/share/tuxedo-backlight-control/

chmod +x ${install_dir}backlight.py
chmod +x ${install_dir}ui.py
mv -f ${install_dir}policy.xml /usr/share/polkit-1/actions/webketje.tuxedo-backlight-control.policy
ln -s -f -T ${install_dir}backlight.py /usr/local/bin/backlight
mv -f ${install_dir}tuxedo-backlight-control.desktop /usr/share/applications/tuxedo-backlight-control.desktop
